generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String    @unique
  password     String
  profileImage String?
  settings     Json?
  bookings     Booking[]
  favourites   Favourite[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@map("User")
}

model Booking {
  id               Int      @id @default(autoincrement())
  userId           Int
  hotelId          String
  roomId           String?
  checkIn          DateTime
  checkOut         DateTime
  guestCount       Int
  firstName        String
  lastName         String
  email            String
  phoneNumber      String
  specialRequest   String?
  status           String   @default("confirmed")
  paymentStatus    String?
  paymentReference String?
  bookingReference String?  @unique
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  // ... any other fields

  @@map("Booking")
}

model PasswordResetToken {
  id        Int      @id @default(autoincrement())
  email     String
  token     String
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@unique([email, token])
  @@map("PasswordResetToken")
}

model Favourite {
  id        Int      @id @default(autoincrement())
  userId    Int
  hotelId   String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, hotelId])
  @@map("Favourite")
}
